<h3>Invoice View</h3>
  <h4><%= @bill.reference %></h4>
  <h4><%= @bill.customer_name %></h4>
  <h4><%= @bill.brand_manager %></h4>
  <h4><%= @bill.narration %></h4>
  <br>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Event</th>
        <th>Amount</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @bill.invoice_date %></td>
        <td>New Invoice</td>
        <td><%= @bill.amount %></td>
      </tr>
      <% @bill.collections.each do |collection| %>
        <tr>
          <td><%= collection.collection_date %></td>
          <td>Collection</td>
          <td><%= collection.amount %></td>
        </tr>
      <% end -%>
    </tbody>
  </table>